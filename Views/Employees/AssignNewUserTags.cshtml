@model List<TblSupervisor>
@{
    ViewData["Title"] = "Assign Tag";
}
<link rel="stylesheet" href="~/css/dark-theme.css" />
<h1>@ViewData["Title"]</h1>
<form id="assignNewTagForm" method="post" action="/Employees/AssignNewUserTagNumber">
    @Html.AntiForgeryToken()
    <label for="userFullName">Full Name:</label>
    <input name="userFullName" id="userFullName" type="text" required/><br />
    <label for="userClockNumber">Clock Number:</label>
    <input name="userClockNumber" id="userClockNumber" type="number" required/><br />
    <label for="userEmail">Email:</label>
    <input name="userEmail" id="userEmail" type="email" required/><br />
    <label for="tagNoInput">Scan Tag:</label>
    <input name="tagNoInput" id="tagNoInput" type="text" required/><br />
    <label for="supervisorID">Supervisor</label>
    <select name="supervisorID" id="supervisorID" required >
        @foreach (var supervisor in Model)
        {
            <option value=@supervisor.Id>@supervisor.FullName</option>
        }
    </select>
    <button>Assign</button>
</form>